<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".TopUpPage">

    <Button
        android:id="@+id/Button1"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginVertical="40dp"
        android:layout_marginLeft="100dp"
        android:drawableRight="@drawable/coin"
        android:text="500"
        android:onClick="topUpOne"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="1500"
        android:textSize="30dp"
        android:layout_marginVertical="230dp"
        android:layout_marginLeft="100dp"
        android:onClick="topUpTwo"
        android:drawableRight="@drawable/coin"
        />

    <Button
        android:id="@+id/Button3"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginVertical="420dp"
        android:layout_marginLeft="100dp"
        android:drawableRight="@drawable/coin"
        android:text="3000"
        android:onClick="topUpThree"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_marginVertical="110dp"
        android:layout_marginLeft="140dp"
        android:text="9.99SAR"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginVertical="300dp"
        android:layout_marginLeft="140dp"
        android:text="19.99SAR"
        android:textSize="30dp"
        android:textColor="#000000"/>
    />
    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginVertical="500dp"
        android:layout_marginLeft="140dp"
        android:text="29.99SAR"
        android:textSize="30dp"
        android:textColor="#190000"/>
    />
</FrameLayout>